<cs:style xmlns:cs="http://purl.org/net/xbiblio/csl/2">
  <cs:info>test</cs:info>
  <cs:templates>
    <cs:template cs:name="apa-authors">
      <cs:list cs:shorten-min="3"
	             cs:shorten-use="1"
	             cs:and-as="symbol">
	      <cs:reference cs:variable="author"
                      cs:transforms="names.initialize"/>
        </cs:list>
    </cs:template>
  </cs:templates>
  <cs:citation>
    <!-- configure sort/group in templates -->
    <cs:if cs:mode="narrative">
      <cs:list cs:delimiter=", "
	             cs:group-by="cs-author"
               cs:sort="cs-author">
	      <cs:reference cs:template="apa-authors"/>
	      <cs:list cs:prefix="(" cs:suffix=")">
          <cs:reference cs:template="date-year"/>
          <cs:reference cs:template="citation-locator"/>
	      </cs:list>
      </cs:list>
    </cs:if>
    <cs:else>
      <!-- parenthetical author-date citation -->
      <cs:list cs:group-by="cs-author-year"
               cs:prefix="(" suffix=")"
               cs:delimiter="; ">
        <cs:reference cs:template="author-paren" cs:suffix=", "/>
        <cs:reference cs:variable="issued" cs:transforms="date.year"/>
        <cs:reference cs:variable="issued" cs:transforms="date.year.suffix"/>
      </cs:list>
    </cs:else>
  </cs:citation>
  <cs:bibliography>
    <cs:list cs:sort="cs-author-year"
             cs:group-by="cs-author-year">
      <cs:reference cs:term="todo"/>
    </cs:list>
  </cs:bibliography>
</cs:style>
