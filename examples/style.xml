<style xmlns="http://purl.org/net/xbiblio/csl/2">
  <info>test</info>
  <templates>
    <template name="apa-authors">
      <list shorten-min="3"
	          shorten-use="1"
	          and-as="symbol">
	      <reference variable="author"
                   transforms="names.initialize"/>
      </list>
    </template>
  </templates>
  <citation>
    <!-- configure sort/group in templates -->
    <if mode="narrative">
      <list delimiter=", "
	          group-by="cs:author"
            sort="cs:author">
	      <reference template="apa-authors"/>
	      <list prefix="(" suffix=")">
          <reference template="date-year"/>
          <reference template="citation-locator"/>
	      </list>
      </list>
    </if>
    <else>
      <!-- parenthetical author-date citation -->
      <list group-by="cs:author-year"
            prefix="(" suffix=")"
            delimiter="; ">
        <reference template="author-paren" suffix=", "/>
        <reference variable="issued" transforms="date.year"/>
        <reference variable="issued" transforms="date.year.suffix"/>
      </list>
    </else>
  </citation>
  <bibliography>
    <list sort="cs:author-year"
          group-by="cs:author-year">
      <reference term="todo"/>
    </list>
  </bibliography>
</style>
